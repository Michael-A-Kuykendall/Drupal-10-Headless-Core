# Ignore everything in docroot by default
/docroot/*

# Track only specific files and directories
!/docroot/composer.json
!/docroot/.ddev/
!/docroot/web/modules/custom/
!/docroot/web/themes/custom/
!/docroot/web/profiles/custom/
!/docroot/web/sites/default/

# Drupal configuration files that may contain sensitive information
/docroot/web/sites/*/settings*.php
/docroot/web/sites/*/services*.yml
/docroot/web/sites/*/settings.local.php
/docroot/web/sites/development.services.yml

# Drupal user-generated content
/docroot/web/sites/*/files/
/docroot/web/sites/*/private/
/docroot/web/sites/simpletest/

# DDEV configuration and files
/.ddev/docker-compose.yaml
/.ddev/db_snapshots/
/.ddev/.gitignore
/.ddev/.dbimageBuild

# Development files
.env
.env.local
*.log
*.sql
*.sqlite
.DS_Store
.idea/
.vscode/
*.sublime-workspace
*.sublime-project

# Composer files
composer.phar
/docroot/vendor/
/docroot/composer.lock

# Frontend dependencies (if applicable)
node_modules/
npm-debug.log
yarn-debug.log
yarn-error.log

# Build artifacts
/docroot/web/sites/*/translations/
/docroot/web/sites/*/tmp/
/docroot/web/sites/*/cache/

# Backup files
*.bak
*.swp
*~

# Local development configuration
/docroot/web/sites/*/settings.local.php
/docroot/web/sites/development.services.yml